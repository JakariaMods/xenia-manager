<Application x:Class="XeniaManager.DesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XeniaManager.DesktopApp"
             StartupUri="Windows\MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default theme -->
                <ResourceDictionary Source="Resources\Themes\Light.xaml" />
                <!-- Animations -->
                <ResourceDictionary Source="Resources\Animations.xaml" />
                <!-- Fonts -->
                <ResourceDictionary Source="Resources\Fonts.xaml" />
                <!-- UI Styles -->
                <ResourceDictionary Source="Resources\UIStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>