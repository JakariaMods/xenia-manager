<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Xenia Setting-->
    <Style x:Key="XeniaSetting" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SettingBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SettingBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="17,2,0,2"/>
    </Style>

    <!-- Separation Line -->
    <!-- Vertical -->
    <Style x:Key="VerticalSeparationLine" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Height" Value="2"/>
    </Style>
    <!-- Horizontal -->
    <Style x:Key="HorizontalSeparationLine" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Width" Value="2"/>
    </Style>

    <!-- Patch/Setting Border -->
    <Style x:Key="SettingBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SettingBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SettingBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
</ResourceDictionary>